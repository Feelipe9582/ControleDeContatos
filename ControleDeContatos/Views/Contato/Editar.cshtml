@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>


</div>

<form>
  <div class="mb-3">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" placeholder="Digite o Nome do Contato">
  </div>

    <div class="mb-3">
        <label for="nome">Email</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do Contato">
    </div>

    <div class="mb-3">
        <label for="nome">Telefone</label>
        <input type="text" class="form-control" placeholder="Digite o Telefone do Contato">
    </div>
  
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>
